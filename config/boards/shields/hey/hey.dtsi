#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <7>;
		rows = <8>;
    // | LA1 | LA2 | LA3 | LA4 | LA5 | LA6 | KC_NO |         | RA1 | RA2 | RA3 | RA4 | RA5 | RA6 | RA7 |
    // | LB1| LB2 | LB3 | LB4 | LB5 | LB6 | KC_NO |          | RB1 | RB2 | RB3 | RB4 | RB5 | KC_NO | RB7 |
    // | LC1 | LC2 | LC3 | LC4 | LC5 | LC6 | KC_NO|          | RC1 | KC_NO | RC3 | RC4 | RC5 | RC6 | RC7 |
    // | LD1 | LD2 | LD3 | LD4 | LD5 | KC_NO | KC_NO |       | RD1 | KC_NO | KC_NO | RD4 | RD5 | RD6 | RD7 |

    		map = <
    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6)
    RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)            RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)         RC(5,6)
    RC(2,0)  RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)           RC(6,0)         RC(6,2) RC(6,3) RC(6,4) RC(6,5) RC(6,6)
    RC(3,0)  RC(3,1) RC(3,2)   RC(3,3)  RC(3,4)                RC(7,0)                 RC(7,3) RC(7,4) RC(7,5) RC(7,6)
    		>;
	};

};
